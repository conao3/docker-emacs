env:
  global:
    - secure: 
    - secure: 
  matrix:
{{#data}}
    - TARGET_IMAGE="{{id}}"
{{/data}}

install:
  - docker version
  - make .make/build-${TARGET_IMAGE}

script:
  - docker login --username=${DOCKER_USERNAME} --password=${DOCKER_PASSWORD}
  - make .make/push-${TARGET_IMAGE}

